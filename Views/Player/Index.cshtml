@model WebGame.Entities.Player
@{
    ViewData["Title"] = "Player";
}

<h1>Player</h1>

<span>
    Name:
    @Model.Name
</span>
<br />
<br />
<br />
<span>Exp: @Model.Exp</span>
<br />
<span>Cash: @Model.Cash</span>
<br />
<br />
Statistics:
<br />
<span>Strenght: @Model.Strenght</span>
<br />
<span>Dexterity: @Model.Dexterity</span>
<br />
<span>Endurance: @Model.Endurance</span>
<br />
<br />
Armors:
<br />
<span>
    Helmet: @if (Model.Helmet == null)
    {
        <b>"None"</b>
    }
    else
    {
        @Model.Helmet.Name
    }
</span>
<br />
<span>
    Armor: @if (Model.Armor == null)
    {
        <b>"None"</b>
    }
    else
    {
        @Model.Armor.Name
    }
</span>
<br />
<span>
    Legs: @if (Model.Legs == null)
    {
        <b>"None"</b>
    }
    else
    {
        @Model.Legs.Name
    }
</span>
<br />
<span>
    Boots: @if (Model.Boots == null)
    {
        <b>"None"</b>
    }
    else
    {
        @Model.Boots.Name
    }
</span>
<br />